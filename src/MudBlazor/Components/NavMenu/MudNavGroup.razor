@namespace MudBlazor
@inherits MudComponentBase

<div @attributes="UserAttributes" class=@Classname disabled="@Disabled" style="@Style">
    <button @onclick="ExpandedToggle" tabindex="0" class="@ButtonClassname">
        @if (!String.IsNullOrEmpty(Icon) || !String.IsNullOrEmpty(IconPath))
        {
            <MudIcon Icon="@Icon" IconPath="@IconPath" Color="@IconColor" Class="@IconClassname" />
        }
        <div Class="mud-nav-link-text">
            @Title
        </div>
        @if (!HideExpandIcon)
        {
            <MudIcon Icon="@ExpandIcon" class="@ExpandIconClassname" />
        }
    </button>
    <MudCollapse Expanded="@Expanded" MaxHeight="@MaxHeight" Class="mud-navgroup-collapse">
        <MudNavMenu>
            @ChildContent
        </MudNavMenu>
    </MudCollapse>
</div>